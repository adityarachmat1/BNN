                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="14dp"
                    android:textColor="@color/colortextkuning" />
            </LinearLayout>

            <RelativeLayout
