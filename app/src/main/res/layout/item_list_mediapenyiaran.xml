<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edNamaMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Media"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:background="@drawable/selector_edittext_white"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/colorputih"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imgHapus"/>

    <ImageView
        android:id="@+id/imgHapusMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trash_copy"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/edNamaMedia" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#5d9ab9"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgHapusMedia"/>

</RelativeLayout>