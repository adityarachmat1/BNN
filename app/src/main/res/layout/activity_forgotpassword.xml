<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="210dp"
                    android:background="@drawable/bnn"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/bg_login"
                android:layout_below="@+id/relativeLayout5"
                android:layout_toEndOf="@+id/progressBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorbirumuda"
                    android:id="@+id/linearLayout3"
                    android:orientation="horizontal">
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lupa Password"
                    android:textSize="20sp"
                    android:textColor="@color/colorputih"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirimkan surel anda dan kami akan mengirimkan \n cara melakukan perubahan kata sandi nya"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorputih"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:id="@+id/textView14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorputihlogin"
                    android:layout_marginTop="14dp"
                    android:id="@+id/relativeLayout6"
                    android:layout_below="@+id/textView14"
                    android:layout_alignParentStart="true">

                    <ImageView android:id="@+id/iconLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"/>

                    <EditText
                        android:id="@+id/textforgotpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Surat Elektronik"
                        android:inputType="textEmailAddress"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorbiruputih"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/iconLock"
                        android:background="@null"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorbirumuda"
                        android:id="@+id/linearLayout5"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true">
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/button_forgotpassword"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Kirim"
                    android:textSize="18sp"
                    android:background="@drawable/button"
                    android:textAlignment="center"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/relativeLayout6"
                    android:layout_centerHorizontal="true" />

                <TextView android:id="@+id/txtGoToLogin"
                    android:layout_below="@+id/button_forgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="14dp"
                    android:text="Masuk"
                    android:textColor="#82caf4"
                    android:layout_marginBottom="14dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorbirumuda"
                android:id="@+id/linearLayout4"
                android:layout_below="@id/relativeLayout2"
                android:orientation="horizontal">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Badan Narkotika Nasional - Copyright Â© 2017"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
