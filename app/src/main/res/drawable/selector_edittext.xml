<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list>

            <item android:left="-4dp" android:right="-4dp" android:top="-4dp" android:bottom="1dp" >
                <shape android:shape="rectangle" >
                    <solid android:color="#22000000"/>
                    <padding android:bottom="8dp" android:top="5dp"/>
                    <stroke android:color="@color/colorhitambiru" android:width="1.5dp" />
                </shape>
            </item>

        </layer-list>

    </item>

    <item>

        <layer-list>

            <item android:left="-4dp" android:right="-4dp" android:top="-4dp" android:bottom="1dp" >
                <shape android:shape="rectangle" >
                    <solid android:color="@android:color/transparent"/>
                    <padding android:bottom="8dp" android:top="5dp"/>
                    <stroke android:color="@color/colorhitambiru" android:width="1.5dp" />
                </shape>
            </item>

        </layer-list>

    </item>

</selector>