<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:left="-4dp" android:right="-4dp" android:top="-4dp" android:bottom="1dp" >
                <shape android:shape="rectangle" >
                    <solid android:color="@android:color/transparent"/>
                    <padding android:bottom="8dp" android:top="5dp"/>
                    <stroke android:color="#000000" android:width="1.5dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/calendar_dark"  />

            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" >
        <layer-list>
            <item android:left="-4dp" android:right="-4dp" android:top="-4dp" android:bottom="1dp" >
